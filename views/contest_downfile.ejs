        </script>
      <% } %>
    <% } else { %>
      <div class="row">
        <div class="column">
          <div class="ui error message">
            请在比赛结束后查看题解。
          </div>
        </div>
      </div>
    <% } %>
    </div>
  </div>
  <div style="text-align: center; margin: 1em 0;">
    <a href="<%= syzoj.utils.makeUrl(['contest', contest.id]) %>" class="ui labeled icon button"><i class="ui angle left icon"></i>返回</a>
  </div>
</div>
<% include footer %>
